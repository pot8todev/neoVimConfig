{
  "Default body + box container + boxes": {
    "prefix": "setupBoxes",
    "description": "Sets up body with centering, box container, and default box styles",
    "body": [
      "/* ===== Body ===== */",
      "body {",
      "    margin: 0;",
      "    padding: 0;",
      "    font-family: Arial, sans-serif;",
      "    background-color: #f4f4f4;",
      "    color: #333;",
      "    line-height: 1.6;",
      "",
      "    display: flex;",
      "    flex-direction: column;     /* Stack header, main, footer vertically */",
      "    justify-content: center;     /* Centers vertically */",
      "    align-items: center;         /* Centers horizontally */",
      "    min-height: 100vh;           /* Full viewport height */",
      "    text-align: center;          /* Centers text */",
      "}",
      "",
      "/* ===== Box container ===== */",
      ".box-container {",
      "    display: flex;               /* Horizontal alignment of boxes */",
      "    gap: 20px;                   /* Space between boxes */",
      "    flex-wrap: wrap;             /* Wrap to new line if needed */",
      "    justify-content: center;     /* Centers boxes horizontally */",
      "    padding: 20px;",
      "}",
      "",
      "/* ===== Box ===== */",
      ".box {",
      "    background-color: #fff;",
      "    border: 1px solid #ccc;",
      "    border-radius: 8px;",
      "    padding: 20px;",
      "    box-shadow: 0 2px 5px rgba(0,0,0,0.1);",
      "    flex: 1 1 200px;             /* Grow/shrink, min-width 200px */",
      "    transition: all 0.3s ease;",
      "}",
      "",
      ".box:hover {",
      "    box-shadow: 0 5px 15px rgba(0,0,0,0.2);",
      "    transform: translateY(-2px);",
      "}"
    ]
  }
}
